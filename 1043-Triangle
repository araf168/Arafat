#include <stdio.h>
 
int main() {
 
    float A, B, C, D, P;
    scanf("%f%f%f", &A, &B, &C);
    if((A+B)<=C || (B+C)<=A || (A+C)<=B)
    {
        P=(1.0/2)*(A+B)*C;
        printf("Area = %.1f\n", P);
    }
    else
    {
        D=(A+B+C);
        printf("Perimetro = %.1f\n", D);
    }
 
    return 0;
}
